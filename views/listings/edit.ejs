<% layout('/layouts/boilerplate')-%>
<body>
    <h3>
        Edit Your listing:
    </h3>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <form method="post" action="/listings/<%=listing.id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" value="<%=listing.title%>" required/>
            <div class="valid-feedback">Title Looks Good</div></div>
          <div class="md-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description"class="form-control" required><%=listing.description%></textarea>
            <div class="invalid-feedback">Please write a short description</div>
          </div>
          <div class="mb-3">
            <label for="img" class="form-label">Orginal Listing Image</label><br>
            <img src="<%=originalImageUrl%>" alt="listing_img"  id="img">
          </div>
          <div class="md-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input name="listing[image]" type="file" class="form-control" value="<%=listing.image%>"/>
          </div>
          <div class="row">
            <div class="md-3 col-md-4">
           <label for="price" class="form-label">Price</label>
           <input name="listing[price]" placeholder="1200" type="number" class="form-control" min="0" value="<%=listing.price%>" required/>
           <div class="invalid-feedback">Please enter valid price</div>
          </div>
           <div class="md-3 col-md-8">
             <label for="country" class="form-label">Country</label>
             <input name="listing[country]" placeholder="India" type="text" class="form-control"value="<%=listing.country%>" required/>
             <div class="invalid-feedback">Please enter valid Country</div>
            </div>
          </div>
           <div class="md-3">
             <label for="location" class="form-label">Location</label>
             <input name="listing[location]" placeholder="Bangalore" type="text" class="form-control" value="<%=listing.location%>" required/>
             <div class="invalid-feedback">Please enter valid Location</div>
            </div>

        <button class="btn btn-dark edit-btn mt-3">Save</button>
     </form>
    </div>
</div>

</body>
